{
    "compilerOptions": {
        "target": "ES2021",
        "lib": [
            "ES2021",
            "DOM",
            "DOM.Iterable",
            "ESNext.String"
        ],
        "moduleResolution": "Node16",
        "module": "Node16",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",

        /* Type Checking */
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noImplicitReturns": true
    }
}
